<h1><%= @title %></h1>

<table class="band-manage-table">
  <thead>
    <tr>
      <th>バンド名</th>
      <th>leader</th>
      <th>Vo</th>
      <th>Gt1</th>
      <th>Gt2</th>
      <th>Ba</th>
      <th>Dr</th>
      <th>Key</th>
      <th>1日目</th>
      <th>2日目</th>
      <th>3日目</th>
      <th>4日目</th>
      <th class='description'>備考</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @big_concert_bands.each do |big_concert_band| %>
      <tr>
        <td><%= big_concert_band.name %></td>
        <td><%= big_concert_band.leader %></td>
        <td><%= big_concert_band.vo %></td>
        <td><%= big_concert_band.gt1 %></td>
        <td><%= big_concert_band.gt2 %></td>
        <td><%= big_concert_band.ba %></td>
        <td><%= big_concert_band.dr %></td>
        <td><%= big_concert_band.key %></td>
        <td><%= marubatu(big_concert_band.day1) %></td>
        <td><%= marubatu(big_concert_band.day2) %></td>
        <td><%= marubatu(big_concert_band.day3) %></td>
        <td><%= marubatu(big_concert_band.day4) %></td>
        <td class='description'><%= big_concert_band.description %></td>
        <td><a href="/admin/big_concert_bands/<%=big_concert_band.id%>/edit">編集</a></td>
        <td><a data-confirm="Are you sure?" data-method="delete" href="/admin/big_concert_bands/<%=big_concert_band.id%>" rel="nofollow">削除</a></td>
      </tr>
    <% end %>
  </tbody>
</table>