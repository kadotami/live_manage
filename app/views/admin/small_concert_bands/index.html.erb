<table>
  <thead>
    <tr>
      <th>バンド名</th>
      <th>曲名</th>
      <th>リーダー</th>
      <th>ボーカル</th>
      <th>ギター1</th>
      <th>ギター2</th>
      <th>ベース</th>
      <th>ドラム</th>
      <th>キーボード</th>
      <th>１週目</th>
      <th>２週目</th>
      <th>備考</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @small_concert_bands.each do |small_concert_band| %>
      <tr>
        <td><%= small_concert_band.name %></td>
        <td><%= small_concert_band.song %></td>
        <td><%= small_concert_band.leader %></td>
        <td><%= small_concert_band.vo %></td>
        <td><%= small_concert_band.gt1 %></td>
        <td><%= small_concert_band.gt2 %></td>
        <td><%= small_concert_band.ba %></td>
        <td><%= small_concert_band.dr %></td>
        <td><%= small_concert_band.key %></td>
        <td>
          <% if small_concert_band.week1 %>
            ◯
          <%else%>
            ☓
          <%end%>
        </td>
        <td>
          <% if small_concert_band.week2 %>
            ◯
          <%else%>
            ☓
          <%end%>
        </td>
        <td><%= small_concert_band.description %></td>
        <td><%= link_to '編集', edit_small_concert_band_path(small_concert_band) %></td>
        <td><%= link_to '削除', small_concert_band, method: :delete, data: { confirm: 'ほんとに?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
