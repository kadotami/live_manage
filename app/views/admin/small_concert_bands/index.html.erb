<table class="band-manage-table">
  <thead>
    <tr>
      <th>バンド名</th>
      <th>曲名</th>
      <th>leader</th>
      <th>Vo</th>
      <th>Gt1</th>
      <th>Gt2</th>
      <th>Ba</th>
      <th>Dr</th>
      <th>Key</th>
      <th>１週目</th>
      <th>２週目</th>
      <th class='description'>備考</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @small_concert_bands.each do |small_concert_band| %>
      <tr>
        <td><%= small_concert_band.name %></td>
        <td><%= small_concert_band.song %></td>
        <td><%= small_concert_band.leader %></td>
        <td><%= small_concert_band.vo %></td>
        <td><%= small_concert_band.gt1 %></td>
        <td><%= small_concert_band.gt2 %></td>
        <td><%= small_concert_band.ba %></td>
        <td><%= small_concert_band.dr %></td>
        <td><%= small_concert_band.key %></td>
        <td>
          <% if small_concert_band.week1 %>
            ◯
          <%else%>
            ☓
          <%end%>
        </td>
        <td>
          <% if small_concert_band.week2 %>
            ◯
          <%else%>
            ☓
          <%end%>
        </td>
        <td class='description'><%= small_concert_band.description %></td>
        <td><a href="/admin/small_concert_bands/<%=small_concert_band.id%>/edit">編集</a></td>
        <td><a data-confirm="Are you sure?" data-method="delete" href="/admin/small_concert_bands/<%=small_concert_band.id%>" rel="nofollow">削除</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
